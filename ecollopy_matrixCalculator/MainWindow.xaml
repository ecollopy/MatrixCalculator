<Window x:Class="ecollopy_matrixCalculator.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary Source="ThemeManager.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="385*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="275*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource normalTextBlock}" Grid.Row="0" Grid.Column="0" >How many rows and columns do you want?</TextBlock>
        <xctk:DoubleUpDown Style="{StaticResource normalTextBlock}" Grid.Row="0" Grid.Column="1" Name="birthdayAge" Value="{Binding Path=size, Mode=TwoWay}" Minimum="1" Maximum="20" FontSize="20" Foreground="Indigo" Margin="5" />
    </Grid>
</Window>
